<?xml version="1.0" encoding="utf-8"?>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/location_info_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ProgressBar
                android:id="@+id/smartpair_conn_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/smartpair_progressbar_bg"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/smartpair_progressbar"
                android:indeterminateDrawable="@drawable/smartpair_progressbar_indeterminate"
                android:saveEnabled="false"
                />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/smartpair_conn_devicon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/smartpair_bticon">

            <requestFocus />
        </ImageView>

        <EditText
            android:id="@+id/smartpair_conn_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="textNoSuggestions|textMultiLine"
            android:maxLines="2"
            android:minHeight="30dp"
            android:text="Searching bluetooth device.."
            android:textSize="12sp"
            android:textStyle="bold">

            <requestFocus />
        </EditText>

    </LinearLayout>

        </RelativeLayout>
